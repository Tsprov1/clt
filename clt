% Text Node
\draw (303.74,166.9) node  [font=\small] [align=left] {\begin{minipage}[lt]{18.62pt}\setlength\topsep{0pt}
$\displaystyle \dfrac{L^{2}}{\mu \alpha ^{2}}$
\end{minipage}};
% Text Node
\draw (197.2,238.14) node  [font=\small] [align=left] {\begin{minipage}[lt]{34.57pt}\setlength\topsep{0pt}
$\displaystyle -\dfrac{1}{2}\dfrac{\mu \alpha ^{2}}{L^{2}}$
\end{minipage}};
% Text Node
\draw (205.36,5.96) node  [font=\normalsize] [align=left] {\begin{minipage}[lt]{19.46pt}\setlength\topsep{0pt}
$\displaystyle V( r)$
\end{minipage}};
% Text Node
