\end{multicols}

Moment xung lượng của vật rắn đối với $O_1 (O_1XYZ)$ 

\begin{equation}
\vec{L}_{O_1} = \sum_{k} \left[ \vec{R}_{k} \times m_{k} \vec{V}_{k} \right] 
\label{eq:3}
\end{equation}

Thay \eqref{eq:1}, \eqref{eq:2} vào \eqref{eq:3} ta được 
\begin{align}
\vec{L}_{O_1} &= \sum_{k} \left[ \left( \vec{R}_o + \vec{r}_k \right) \times m_k \left( \vec{V}_o + \big[ \vec{\omega} \times \vec{r}_k  \big]  \right) \right]  \nonumber \\
&= \sum_k \left[\vec{R}_o \times m_k \vec{V}_o\right] + \sum_k \left[\vec{R}_o \times m_k \big[ \vec{\omega} \times \vec{r}_k  \big]  \right]  + \sum_k \left[\vec{r}_k \times m_k \vec{V}_o\right] \nonumber \\ & \quad + \sum_k \Big[\vec{r}_k \times m_k \big[ \vec{\omega} \times \vec{r}_k  \big]  \Big] \nonumber \\
&= \Big[ \vec{R}_o \times \sum_k m_k \vec{V}_o \Big] + \Big[\vec{R}_o \times \big[\vec{\omega} \times \sum_k m_k \, \vec{r}_k  \big] \Big]  + \Big[ \sum_k m_k \, \vec{r}_k \times \vec{V}_o  \Big] \\ & \quad + \sum_k m_k \Big[ \vec{r}_k \times \big[ \vec{\omega} \times \vec{r}_k \big] \Big] \nonumber
\end{align}

Chọn $O \equiv C$ của vật rắn 
$$\vec{r}_c = \dfrac{\sum_{k} m_k \, \vec{r}_k}{\sum_{k} m_k} = \vec{0} \Rightarrow \sum_k m_k \, \vec{r}_k = \vec{0} \, ;\quad \sum_k m_k = m \text{ khối lượng của vật rắn}$$

$$\Rightarrow \vec{L}_{O_1} = \Big[ \vec{R}_c \times m \, \vec{V}_c \Big] + \sum_k m_k \Big[ \vec{r}_k \times [ \vec{\omega} \times \vec{r}_k]  \Big]$$

$\vec{L} = \Big[ \vec{R}_c \times m \, \vec{V}_c \Big] $: moment động lượng của chất điểm m (khối lượng vật rắn) đặt tại C đối với $O_1$ \\ 

$\vec{L}_c =\displaystyle  \sum_k m_k \Big[ \vec{r}_k \times [ \vec{\omega} \times \vec{r}_k]  \Big]$: moment xung lượng của vật rắn đối với khối tâm C \\
\newpage 

$$\vec{L}_O = \sum_k m_k \, \Big[\vec{r}_{kx} \times \big[ \vec{\omega} \times \vec{r}_k \big]    \Big]$$
 


\begin{align*}
\big[ \vec{\omega} \times \vec{r}_k \big] &= \begin{vmatrix}
\vec{i} & \vec{j} & \vec{k} \\
\omega_x & \omega_y & \omega_z \\
r_{k} & r_{k} & r_{k}
\end{vmatrix} 
= \big( \omega_y r_{k} - \omega_z r_{k} \big) \vec{i} + \big( \omega_z r_{k} - \omega_x r_{k} \big) \vec{j} + \big( \omega_x r_{k} - \omega_y r_{k} \big) \vec{k} \\[10pt]
\Big[\vec{r}_k \times \big[\vec{\omega} \times \vec{r}_k  \big]\Big] &= \begin{vmatrix}
\vec{i} & \vec{j} & \vec{k} \\[7pt]
x_{k} & y_{k} & z_{k} \\[7pt]
\big( \omega_y r_{k} - \omega_z r_{k} \big) & \big( \omega_z r_{k} - \omega_x r_{k} \big) & \big( \omega_x r_{k} - \omega_y r_{k} \big)
\end{vmatrix} \\[10pt]
&= \quad \Big[ \big( y_k^{\,2} + z_k^{\,2} \big) \omega_x  - x_k \, y_k \, \omega_y - x_k \, z_k \, \omega_z \Big]\, \vec{i} 
\\ &\quad + \Big[ \big( z_k^{\,2} + x_k^{\,2} \big) \omega_y  - y_k \, z_k \, \omega_z - y_k \, x_k \, \omega_x \Big]\, \vec{j} \\ &\quad + \Big[ \big( x_k^{\,2} + y_k^{\,2} \big) \omega_z  - z_k \, x_k \, \omega_x - z_k \, y_k \, \omega_y \Big]\, \vec{k}  
\end{align*}
\begin{align*}
\vec{L}_O &= \Big( J_{xx} \, \omega_x + J_{xy} \, \omega_y + J_{xz} \, \omega_z \Big) \, \vec{i}  + \Big( J_{yx} \, \omega_x + J_{yy} \, \omega_y + J_{yz} \, \omega_z \Big) \, \vec{j} 
+ \Big( J_{zx} \, \omega_x + J_{zy} \, \omega_y + J_{zz} \, \omega_z \Big) \, \vec{k} 
\end{align*}
Vậy $\vec{L}_O (L_x, L_y, L_z) = \vec{L}_\alpha \,; \alpha =1 \rightarrow x, 2 \rightarrow y, 3 \rightarrow z$

$$\boxed{L_\alpha = \sum_{\beta=1}^3 J_{\alpha\beta} \, \omega_\beta}$$


Nếu vật rắn quay quanh một trục $\Delta$ đi qua C thì \\

$\vec{\omega}\,(0,0,\omega); \vec{L}_O = (L_x, L_y, L_z); J_{xy} = J_{yz} = J_{zx} = 0$ \\

$\vec{L}_O = L_z \, \vec{k} = J_z \, \omega \, \vec{k} = J_z \, \vec{\omega} \,; \, \vec{n} = (0,0,1) $ 
$$J_\Delta = n_x^{\,2} + n_y^{\,2} + n_z^{\,2} = J_z \Rightarrow \boxed{\vec{L}_O = J_\Delta \, \vec{\omega}}$$

\newpage 
\setcounter{equation}{0}
{\centering \section*{ CÁC PHƯƠNG TRÌNH CHUYỂN ĐỘNG CỦA VẬT RẮN} \par}
\vspace{0.5cm}
Chuyển động tự do của vật rắn được phân tích thành hai chuyển động: chuyển động tịnh tiến cùng khối tâm C và chuyển động quay xung quanh 
một vị trí đi qua khối tâm C.\\

Số bậc tự do $s=6$ và 6 tọa độ suy rộng $\vec{R}_c (x_c, y_c, z_c)$ và $\vec{\alpha}\,(\varphi, \Psi, \theta)$ \\

Phương trình Lagrange loại 2 
\begin{align}
\dfrac{\text{d}}{\text{dt}} \left(\dfrac{\partial T}{\partial \vec{V}_c} \right) -\dfrac{\partial T}{\partial \vec{R}_c} &= Q_{\vec{R}_c} \label{eq:1} \\[10pt]
\dfrac{\text{d}}{\text{dt}} \left(\dfrac{\partial T}{\partial \vec{\omega}} \right) -\dfrac{\partial T}{\partial \vec{\alpha}} &= Q_{\vec{\alpha}} \label{eq:2}
\end{align}

Động năng của vật rắn 
\begin{equation}
T = \dfrac{1}{2} m \vec{V}_c^{\,2} + \dfrac{1}{2} \sum_{\alpha , \beta = 1 }^{3} J_{\alpha \beta} \, \omega_\alpha \, \omega_\beta  
\label{eq:3}
\end{equation}

Công nguyên tố 
\begin{align} 
\delta A &= \sum_k \vec{F}_k \, \delta \vec{R}_k = \sum_k \vec{F}_k  \left( \delta \vec{R}_c + \delta \vec{r}_k \right) \label{eq:4} \\ 
&= \sum_k \vec{F}_k \, \delta \vec{R}_c + \sum_k \vec{F}_k \, \delta \vec{r}_k \nonumber
\end{align}

\begin{multicols}{2}
  Theo hình vẽ ta có \\
  
  $\hspace{0.5cm} \delta \vec{r}_k = \big[\delta \vec{\alpha} \times \vec{r}_k   \big]$
\begin{align*}
\delta A &= \sum_k \vec{F}_k \, \delta \vec{R}_c + \sum_k \vec{F}_k \, \big[ \delta \vec{\alpha} \times \vec{r}_k  \big]  \\
&= \sum_k \vec{F}_k \, \delta \vec{R}_c + \sum_k \big[\vec{r}_k \times \vec{F}_k \big] \delta \vec{\alpha} \\
&= Q_{\vec{R}_c} + Q_{\vec{\alpha}}
\end{align*}
\columnbreak

