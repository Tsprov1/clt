\end{multicols}
Vậy 
\begin{equation} 
  \delta L = \sum_{k=1}^{N} \left(\dfrac{\partial L}{\partial \vec{r}_k} \, \delta \vec{r}_k + \dfrac{\partial L}{\partial \vec{v}_k} \, \delta \vec{v}_k \right)
\label{eq:4}
\end{equation}

Thay \eqref{eq:3} vào \eqref{eq:4} ta được:
\begin{equation} 
\delta L = \sum_{k=1}^{N} \left(\dfrac{\partial L}{\partial \vec{r}_k}\,\big[\delta \vec{\varphi} \times \vec{r}_k\big]  + \dfrac{\partial L}{\partial \vec{v}_k}\, \big[\delta \vec{\varphi} \times \vec{v}_k\big] \right)
\label{eq:5}
\end{equation}

Mặt khác 

\begin{equation}
\begin{cases}
m_k \vec{v}_k = \vec{P}_k= \dfrac{\partial L}{\partial \vec{v}_k} \\[10pt]
\dfrac{\text{d}}{\text{dt}} \left( \dfrac{\partial L}{\partial \vec{v}_k}  \right) = \dfrac{\partial L}{\partial \vec{r}_k} = \dot{\vec{P}}_k
\end{cases}
\label{eq:6}
\end{equation}

Thay \eqref{eq:6} vào \eqref{eq:5} 
$$\delta L = \sum_{k=1}^{N} \left(\dot{\vec{P}}_k  \big[\delta \vec{\varphi} \times \vec{r}_k\big]  + \vec{P}_k \big[\delta \vec{\varphi} \times \dot{\vec{r}}_k\big]  \right)$$ 

Áp dụng công thức $\vec{A} \left[ \vec{B} \times \vec{C} \right] = \vec{C} \left[\vec{A} \times \vec{B}\right] = \vec{B} \Big[\vec{C} \times \vec{A}\Big]$
\begin{align*}
  \delta L &= \sum_{k=1}^{N} \left( \delta \vec{\varphi} \left[\vec{r}_k \times \dot{\vec{P}}_k \right] + \delta \vec{\varphi} \left[ \dot{\vec{r}}_k \times \vec{P}_k  \right]  \right) \\
  &= \delta \vec{\varphi} \sum_{k=1}^{N} \left(\left[\vec{r}_k \times \dot{\vec{P}}_k  \right]  + \left[ \dot{\vec{r}}_k \times \vec{P}_k  \right]   \right)   \\
  &= \delta \vec{\varphi} \, \dfrac{\text{d}}{\text{dt}} \left(\sum_{k=1}^{N} \left[ \vec{r}_k \times \vec{P}_k   \right]\right)  = 0  \hspace{1cm} \forall  \, \delta \vec{\varphi} \\
 & \Leftrightarrow \dfrac{\text{d}}{\text{dt}} \left( \sum_{k=1}^{N} \left[ \vec{r}_k \times \vec{P}_k \right] \right) = \vec{0}
\end{align*}
\begin{tcolorbox}[boxsep=5px]{Tổng moment xung lượng của hệ là đại lượng bảo toàn}
$$L = \sum_{k=1}^{N} \left[ \vec{r}_k  \times \vec{P}_k \right] = \overrightarrow{\text{const}}$$
\end{tcolorbox}


$$\vec{M} = \sum_{k=1}^{N} \left[\vec{r}_k  \times  \vec{F}_k \right] \hspace{2cm}  \vec{F}_k^i = -\dfrac{\partial U}{\partial \vec{r}_k}$$
Vì $$\delta L = \delta \vec{\varphi} \sum_{k=1}^{N} \left(\left[ \vec{r}_k \times \dot{\vec{P}}_k  \right] + \left[\dot{\vec{r}}_k \times \vec{P}_k    \right]   \right) = 0 \hspace{1.5cm} \forall \, \delta \vec{\varphi}$$

\begin{equation}
\Rightarrow \sum_{k=1}^{N} \left[\vec{r}_k \times \dfrac{\text{d}}{\text{dt}} \,\vec{P}_k  \right] = \vec{0}
\label{eq:7}
\end{equation}
Mà 
\begin{equation}
\vec{F}_k^i = -\dfrac{\partial U}{\partial \vec{r}_k} = \dfrac{\partial (L-T)}{\partial \vec{r}_k}= \dfrac{\partial L}{\partial \vec{r}_k} = \dfrac{\text{d}}{\text{dt}} \left(\dfrac{\partial L}{\partial \dot{\vec{r}}_k}  \right) =\dfrac{\text{d}}{\text{dt}} \, \vec{P}_k
\label{eq:8}
\end{equation}

Từ \eqref{eq:7} và \eqref{eq:8} $ \displaystyle \Rightarrow \sum_{k=1}^{N} \left[\vec{r}_k \times \vec{F}_k ^i  \right] = \vec{0}$  \, hay $\vec{M} =\vec{0}$ \\



\newpage
\subsection*{Định luật bảo toàn cơ năng của hệ kín} 
Từ tính chất đồng nhất về thời gian trong hqc quán tính, thời gian là đồng nhất tại mọi thời điểm đều tương đương với nhau về mặt vật lý hay khi ta thay $t \rightarrow t + \delta t$ thì hàm Lagrange  của hệ không thay đổi, tức là Lagrange  không phụ 
thuộc tường minh vào thời gian.
\setcounter{equation}{0}
$$L(t)=L(t+\delta t) \Rightarrow \dfrac{\partial L}{\partial t}=0$$

Chú ý: $L(\vec{r}_k, \vec{v}_k, t),\, \vec{r}_k(t), \, \vec{v}_k(t)$ \\
\begin{align*}
\dfrac{\text{d}}{\text{dt}} L &= \sum_{k=1}^{N} \left(\dfrac{\partial L}{\partial \vec{r}_k} \,\dot{\vec{r}}_k + \dfrac{\partial L}{\partial \vec{v}_k}\, \dot{\vec{v}}_k  \right) \\
&= \sum_{k=1}^{N} \left[\dfrac{\text{d}}{\text{dt}} \left(\dfrac{\partial L}{\partial \vec{v}_k} \, \vec{v}_k + \dfrac{\partial L}{\partial \vec{v}_k}\, \dot{\vec{v}}_k  \right) \right] \\
 &= \dfrac{\text{d}}{\text{dt}} \left( \sum_{k=1}^{N} \dfrac{\partial L}{\partial \vec{v}_k} \, \vec{v}_k  \right) \\
& \Rightarrow  \dfrac{\text{d}}{\text{dt}} \left( \sum_{k=1}^{N} \dfrac{\partial L}{\partial \vec{v}_k} \, \vec{v}_k - L   \right)  = 0
\end{align*}
$$\Rightarrow  E = \sum_{k=1}^{N} \dfrac{\partial L}{\partial \vec{v}_k} \, \vec{v}_k  - L = \text{const} $$

Hay $$E = \sum_{k=1}^{N} m_k \vec{v}_k^{\,2} - \left( \dfrac{1}{2} \sum_{k=1}^{N} m_k \vec{v}_k^{\,2} - U \right)  $$

\begin{tcolorbox}[boxsep=5px]{Cơ năng của hệ kín là đại lượng bảo toàn}
  $$E = \dfrac{1}{2} \sum_{k=1}^{N} m_k \vec{v}_k^{\, 2} + U = T + U = \text{const}$$
\end{tcolorbox}

\newpage 
{\centering 
\section*{CÁC PHƯƠNG TRÌNH HAMILTON}
\par}

Mỗi cơ hệ được xác định bởi $s$ tọa độ suy rộng $q_k$ và $s$ xung lượng suy rộng $p_k$ thỏa mãn $p_k = \dfrac{\partial T}{\partial \dot{q}_k}$ Khi đó cơ hệ được đặc trưng bởi một hàm Hamilton $H(q_k, p_k,t)$. Tọa độ suy rộng và xung lượng suy rộng $(q_k, p_k)$ sẽ thỏa mãn từ phương trình 
Hamilton $(2s)$ phương trình: \\

$
\begin{cases}
\dot{q}_k = \dfrac{\partial H}{\partial p_k} \\[15pt]
\dot{p}_k = -\dfrac{\partial H}{\partial q_k}\\
\end{cases}
$ $k=1\div s$ các phương trình Hamilton \\

Hình thức luận trên gọi là hình thức luận Hamilton. Ta có $L = L(q_k, \dot{q}_k, t)$ 
\begin{equation}
\text{d}L=\sum_{k=1}^{N} \left(\dfrac{\partial L}{\partial q_k} \, \text{d}q_k + \dfrac{\partial L}{\partial \dot{q}_k} \, \text{d}\dot{q}_k   \right) + \dfrac{\partial L}{\partial t} \, \text{dt}
\label{eq:1}
\end{equation}
Ta có $L = T -U = T(q_k,\dot{q}_k,t)-U(q_k,t)$
\begin{equation}
\Rightarrow p_k = \dfrac{\partial T}{\partial \dot{q}_k} = \dfrac{\partial L }{\partial \dot{q}_k} \hspace{1cm} \text{ vì } \dfrac{\partial U}{\partial \dot{q}_k} =0
\label{eq:2}
\end{equation}

Theo phương trình Lagrange  loại 2 $$\dfrac{\text{d}}{\text{dt}} \left(\dfrac{\partial L}{\partial \dot{q}_k} \right) - \dfrac{\partial L}{\partial q_k} = 0$$
\begin{equation}
\Rightarrow  \dfrac{\partial L}{\partial q_k} = \dfrac{\text{d}}{\text{dt}} \left(\dfrac{\partial L}{\partial \dot{q}_k} \right) = \dot{p}_k
\label{eq:3}
\end{equation}

Thay  \eqref{eq:2}, \eqref{eq:3} vào \eqref{eq:1} 
\begin{align*}
\text{d}L &= \sum_{k=1}^{s} \left(\dot{p}_k \text{ d}q_k + p_k \text{ d} \dot{q}_k  \right) + \dfrac{\partial L}{\partial t} \text{ dt} \\
&= \sum_{k=1}^{s} \left[\dot{p}_k \text{ d}q_k + \text{d} \left(p_k  \dot{q}_k \right) - \dot{q}_k \text{ d} p_k   \right] + \dfrac{\partial L}{\partial t} \text{ dt} 
\end{align*}
\begin{equation}
\text{d} \left( \sum_{k=1}^{s} p_k \dot{q}_k - L   \right) = \sum_{k=1}^{s} \left[ - \dot{p}_k \text{ d}q_k + \dot{q}_k \text{ d}p_k \right] - \dfrac{\partial L}{\partial t} \text{ dt}
\label{eq:4}
\end{equation}

Lại có 
\begin{equation}
\text{d}H = \sum_{k=1}^{s} \left(\dfrac{\partial H}{\partial q_k} \text{ d} q_k + \dfrac{\partial H}{\partial p_k}\text{ d}p_k \right) + \dfrac{\partial H}{\partial t} \text{ dt}
\label{eq:5}
\end{equation}

Đồng nhất 2 vế phương trình \eqref{eq:4} và \eqref{eq:5}
\begin{align*}
  \raggedright
\begin{cases}
 \displaystyle H = \sum_{k=1}^{s} p_k \dot{q}_k - L \\[15pt]
\dot{q}_k = \dfrac{\partial H}{\partial p_k} \, \, , \hspace{1cm} \dot{p}_k = -\dfrac{\partial H}{\partial q_k} \\[15pt]
\dfrac{\partial H}{\partial t} = - \dfrac{\partial L}{\partial t}
\end{cases}
\end{align*}
$$H = \sum_{k=1}^{s} p_k \dot{q}_k - L = T + U = E$$
\newpage 
{\centering \section*{VẬN TỐC VÀ GIA TỐC CỦA ĐIỂM THUỘC VẬT RẮN,\\ VẬN TỐC GÓC VÀ GIA TỐC GÓC}\par} 
\setcounter{equation}{0} 
 \vspace{0.25cm}
Vị trí của chất điểm $M_k$ thuộc vật rắn đối với hệ tọa độ động Oxyz được xác định bởi bán kính vectơ $\vec{r}_k$, đối với hệ tọa độ 
cố định $O_1XYZ$ được xác định bởi vectơ bán kính $\vec{R}_k$. Vị trí gốc O của hệ tọa độ động xyz đối vối hệ tọa độ
cố định XYZ được xác định bởi bán kính vectơ $\vec{R}_o$ 

\begin{multicols}{2}

Ta có \begin{equation}\vec{R}_k = \vec{R}_o + \vec{r}_k   \label{eq:1}\end{equation} 

Đạo hàm hai vế theo thời gian 
\begin{align}
\text{d} \vec{R}_k &= \text{d} \vec{R}_o + \text{d}\vec{r}_k \nonumber\\
\dfrac{\text{d}}{\text{dt}}\vec{R}_k &= \vec{V}_k = \vec{V}_o + \dfrac{\text{d}}{\text{dt}}\vec{r}_k \\ \nonumber
\end{align} 
\columnbreak
